{
  "compilerOptions": {
    "target": "es2015",
    "module": "NodeNext",
    "lib": ["es2015"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
